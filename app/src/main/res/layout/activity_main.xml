<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rutina_sdk17.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#A349A4"
            android:layoutDirection="rtl" >

            <TextView
                android:text="רוטינה"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:background="@drawable/routines_table_header_background" />

            <TextView
                android:text="הארוע הקודם"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/routines_table_header_background"/>

            <TextView
                android:text="הארוע הבא"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#A349A4" />

        </LinearLayout>

        <ListView
            android:id="@+id/lsv_routines"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            tools:listitem="@layout/list_item_routine" />

        <Button
            android:text="צור רוטינה"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="startCreateRoutineActivity" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
